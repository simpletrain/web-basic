<section>
    <h3>二 、选择题</h3>
    <ol>
        <% for(var i = 0;i < allTopic.single_choice.length; i++) { %>
        <li>
            <p><%= allTopic.single_choice[i].question %></p>
            <% for(var choice in allTopic.single_choice[i].options) { %>
            <label><input type="radio" name=<%= allTopic.single_choice[i].type + i %>
                value=<%= choice %>
                        <% if(allTopic.single_choice[i].input) { %>
                        <% if(allTopic.single_choice[i].input === choice) { %>
                          checked="checked"
                        <% } %>
                        <% } %>>
                (<%= choice %>)<%= allTopic.single_choice[i].options[choice] %>
            </label><br/>
            <% } %>
        </li>
        <% } %>
    </ol>
</section>
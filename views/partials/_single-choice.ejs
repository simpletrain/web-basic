<section class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">二 、选择题</h3>
    </div>
    <div class="panel-body">
    <ol>
        <% for(var i = 0;i < topics.length; i++) { %>
        <li>
            <p><%= topics[i].question %></p>
            <% for(var choice in topics[i].options) { %>
            <label><input type="radio" name=<%= topics[i].type + i %>
                value=<%= choice %>
                        <% if(topics[i].input) { %>
                        <% if(topics[i].input === choice) { %>
                          checked="checked"
                        <% } %>
                        <% } %>>
                (<%= choice %>)<%= topics[i].options[choice] %>
            </label><br/>
            <% } %>
        </li>
        <% } %>
    </ol>
    </div>
</section>